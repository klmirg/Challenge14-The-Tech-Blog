{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}} 
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit</a>
    </li>
    {{/each}}
  </ol>
  <button class="new-post"> <a href="/add-post" class="new-post">+ New Post</a></button>
</section>
{{/if}}




<script src="/javascript/add-post.js"></script> 